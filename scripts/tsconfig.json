{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["**/*.ts", "**/*.json", "**/*.js", "**/*.json"],
  "exclude": ["node_modules", "dist"]
}
